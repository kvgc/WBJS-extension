{
	"manifest_version": 2,
	"name": "webresearcher",
	"version": "0.1",

	"default_locale": "en",
	"description": "Web annotation tool.",

	"permissions": [
		"<all_urls>", "tabs", "storage"
	],
	"icons": {
		"48": "icons/logo.png",
		"96": "icons/logo.png"
	},


	"browser_action": {
		"default_icon": {
			"19": "icons/logo.png",
			"38": "icons/logo.png"
		},
		"default_title": "WebResearcherJS",
		"default_popup": "popup.html",
		"browser_style": true
	},

	"applications": {
		"gecko": {
			"id": "webresearcher@webresearcher.io"
		}
	},
	"sidebar_action": {
		"default_title" : "Notes",
		"default_panel": "webresearcher/notes.html"
	},
	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Ctrl+Alt+U"
			}
		}
	}
}
