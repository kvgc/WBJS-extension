{
	"manifest_version": 2,
	"name": "WebResearcherJS",
	"version": "0.1",
	"description": "https://github.com/kvgc/WebResearcherJS-extension",

	"permissions": [
		"<all_urls>", "tabs", "storage"
	],
	"icons": {
		"48": "logo.png",
		"96": "logo.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "logo.png",
			"38": "logo.png"
		},
		"default_title": "WebResearcherJS",
		"default_popup": "popup.html",
		"browser_style": true
	},

	"applications": {
		"gecko": {
			"id": "webresearcher@webresearcher.io"
		}
	},
	"sidebar_action": {
		"default_title" : "Notes",
		"default_panel": "webresearcher/notes.html"
	},
	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Ctrl+Alt+Y"
			}
		}
	}
}
