{
	"manifest_version": 2,
	"name": "webresearcher",
	"version": "0.1",

	"default_locale": "en",
	"description": "__MSG_extensionDescription__",

	"permissions": [
		"<all_urls>", "tabs", "webRequest", "storage", "alarms", "downloads"
	],
	"icons": {
		"48": "icons/48.png",
		"96": "icons/96.png"
	},


	"browser_action": {
		"default_icon": {
			"19": "icons/19.png",
			"38": "icons/38.png"
		},
		"default_title": "__MSG_browserActionHover__",
		"default_popup": "popup.html",
		"browser_style": true
	},

	"applications": {
		"gecko": {
			"id": "tiddlymarker@ylh.io"
		}
	},
	"sidebar_action": {
		"default_title" : "Notes",
		"default_panel": "webresearcher/notes.html"
	},
	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Ctrl+Alt+U"
			}
		}
	},
		"content_scripts": [
	{
		"matches": ["*://*/*"],
		"js": ["ext_libs/jquery.min.js","ext_libs/jquery-ui.min.js","ext_libs/jquery.cookie.min.js","ext_libs/popper.js","ext_libs/pell.min.js","ext_libs/notify.min.js","webresearcher/webresearcher.js","ext_libs/bootstrap.min.js"],
		"css":["ext_libs/pell.css","ext_libs/jquery-ui.min.css","ext_libs/bootstrap.min.css"]
	}
]
}
